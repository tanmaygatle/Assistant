<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.tanmay.spkrecvoiceit.MainActivity"
    android:id="@+id/main_layout">
    <Button
        android:id="@+id/add_user_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_user_button_text"
        android:layout_gravity="top|left" />
    <Button
        android:id="@+id/delete_user_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_user_button_text"
        android:layout_gravity="top|right" />
    <Button
            android:id="@+id/verify_user_voice_button"
        android:layout_gravity="center"

        android:background="@drawable/round_button"

        android:layout_width="100dp"
        android:layout_height="100dp"/>

</FrameLayout>