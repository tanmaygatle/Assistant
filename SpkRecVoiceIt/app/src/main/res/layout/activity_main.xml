<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.tanmay.spkrecvoiceit.MainActivity">
    <Button
        android:id="@+id/add_user_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_user_button_text"
        android:layout_gravity="top|left" />
    <Button
        android:id="@+id/verify_user_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verify_user_button_text"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/json_response_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:layout_gravity="bottom|center"/>
</FrameLayout>